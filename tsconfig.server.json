{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "./server/",
    "outDir": "./server/dist"
  },
  "include": ["./server"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
